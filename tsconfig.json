{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": [
         "ES5",
         "ES6",
         "ES7"
      ],
      "declaration": true,
      "outDir": "./lib",
      "strict": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitAny": false,
      "strictPropertyInitialization": true,
      "esModuleInterop": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
   },
   "include": [
      "src"
   ],
   "exclude": [
      "node_modules",
      "**/__tests__/*"
   ]
}